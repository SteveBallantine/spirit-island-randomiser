@* Pinched from https://chrissainty.com/building-a-simple-tooltip-component-for-blazor-in-under-10-lines-of-code/ *@

<div class="tooltip-wrapper @(ButtonStyling ? "button-style" : "")">
    <span class="@(Small ? "small" : "")">@Text</span>
    @ChildContent
</div>

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public string Text { get; set; }
    [Parameter] public bool ButtonStyling { get; set; } = true;
    [Parameter] public bool Small { get; set; } = false;
}